{% extends "front/base.html.twig" %}

{% block body %}
    <!-- Introduce -->
    <div class="row">
        <div class="col-3">
            <!-- Introduce Submenu -->
            <ul class="list-group shadow">
                <li class="list-group-item list-group-item-calm">系所介紹</li>
                <!-- A Link -->
                <li class="list-group-item nav-item">
                    <a class="nav-link" href="{{ path("front.introduce.history") }}">系所歷史</a>
                </li>
                <!-- /.A Link -->
                <li class="list-group-item nav-item">
                    <a class="nav-link" href="">成員介紹</a>
                </li>
                <li class="list-group-item nav-item">
                    <a class="nav-link" href="{{ path("front.introduce.honor") }}">榮譽獎項</a>
                </li>
                <li class="list-group-item nav-item">
                    <a class="nav-link" href="#introduce-4">實驗室</a>
                </li>
                <li class="list-group-item nav-item">
                    <a class="nav-link" href="{{ path("front.introduce.future") }}">未來發展</a>
                </li>
                <li class="list-group-item nav-item">
                    <a class="nav-link" href="{{ path("front.introduce.location") }}">系所位置</a>
                </li>
            </ul>
            <!-- /.Introduce Submenu -->
        </div>
        <div class="col-9">
            {% if page is not null %}
            <!-- Page Title -->
            <h5>{{ page.getName() }}</h5>
            <!-- /.Page Title -->
            <!-- Switch Content -->
            <div class="tab-content">
                <!-- A Content -->
                <div class="tab-pane active" id="introduce-1" role="tabpanel">
                    <!-- Article -->

                        <div alt="article-area">
                            <p>
                                {{ page.getContent() | raw }}
                            </p>
                        </div>

                    <!-- /.Article -->
                </div>
            </div>
            <!-- /.Switch Content -->
            {% endif %}
        </div>
    </div>
    <!-- /.Introduce -->
{% endblock %}
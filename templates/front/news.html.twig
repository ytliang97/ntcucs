        <!-- Left Side -->
        <div class="col-3">

            <!-- News Submenu -->
            <ul class="list-group shadow">
                <li class="list-group-item list-group-item-calm">公告分類</li>
                <!-- A Link -->
                <li class="list-group-item nav-item">
                    <a href="{{ path("front.category.show", {"alias": "activities"}) }}" class="nav-link active">活動與演講</a>
                </li>
                <!-- /.A Link -->
                <li class="list-group-item nav-item">
                    <a href="{{ path("front.category.show", {"alias": "hiring"}) }}" class="nav-link">徵才訊息</a>
                </li>
                <li class="list-group-item nav-item">
                    <a href="{{ path("front.category.show", {"alias": "enrollment"}) }}" class="nav-link">招生訊息</a>
                </li>
                <li class="list-group-item nav-item">
                    <a href="{{ path("front.category.show", {"alias": "scholarship"}) }}" class="nav-link">獎學金訊息</a>
                </li>
                <li class="list-group-item nav-item">
                    <a href="{{ path("front.category.show", {"alias": "other"}) }}" class="nav-link">其他訊息</a>
                </li>

            </ul>
            <!-- /.News Submenu -->

        </div>
        <!-- /.Left Side -->

        <!-- Right Side -->
        <div class="col-9">

            <!-- Page Title -->
            <h5>系所公告</h5>
            <!-- /.Page Title -->
            <!-- Switch Content -->
            <div class="tab-content">
                <!-- A Content -->
                <div class="tab-pane active" id="news-1" role="tabpanel">
                    <!-- Article -->
                    <!-- News Type -->
                    <div class="alert alert-dark" role="alert">
                        {{ category.getName() }}
                    </div>
                    <!-- /.News Type -->

                    <div class="row">

                        <!-- News Table -->
                        <div class="col-12" id="news">
                            <table class="table table-striped">
                                <thead class="thead-gray">
                                <tr>
                                    <th scope="col">公告日期</th>
                                    <th scope="col">標題</th>
                                    <!--<th scope="col">瀏覽人次</th>-->
                                </tr>
                                </thead>
                                <tbody>

                                <!-- Row List -->
                                {% for post in category.getPosts() %}
                                    <tr>
                                        <td scope="row">{{ post.getCreateTime().format("Y-m-d") }}</td>
                                        <th><a href="#">{{ post.getName() }}</a></th>
                                        <!--<td></td>-->
                                    </tr>
                                {% endfor %}
                                <!-- /.Row List -->

                                </tbody>
                            </table>
                        </div>

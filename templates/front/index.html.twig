{% extends "front/base.html.twig" %}

{% block body %}

    <!-- Index -->


    <!-- Dashboard -->
    <div class="row">

        <div class="col-1"></div>

        <div class="col-4">

            <!-- Left Side Image -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% set imageIndex = 0 %}
                    {% for image in banner %}
                        {% if imageIndex == 0 %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ imageIndex }}" class="active"></li>
                        {% else %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ imageIndex }}"></li>
                        {% endif %}
                        {% set imageIndex = imageIndex + 1 %}
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% set imageIndex = 0 %}
                    {% for image in banner %}
                        {% if imageIndex == 0 %}
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/uploaded/{{ image.getImage().getFullPath() }}">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ image.getTitle() | default("") }}</h5>
                                    {% if image.getSubtitle() | length != 0 and image.getSubtitle() is not null%}
                                        <p>{{ image.getSubtitle() }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            {% set imageIndex = 1 %}
                        {% else %}
                            <a href="{{ image.getLinkTo() | default("#") }}">
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/uploaded/{{ image.getImage().getFullPath() }}">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>{{ image.getTitle() | default("") }}</h5>
                                        {% if image.getSubtitle() | length != 0 and image.getSubtitle() is not null%}
                                            <p>{{ image.getSubtitle() }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                        {% endif %}

                    {% endfor %}

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- /.Left Side Image -->

        </div>



        <div class="col-6">

            <div class="row">

                <div class="col-12">
                    <!-- latest News Board -->
                    <h5 class="list-title">最新消息</h5>
                    <div>
                        <ul class="list-group list-group-date">
                            {% for post in posts %}
                                <li class="list-group-item">
                                    <p>
                                        <a href="{{ path("front.post.show", {"id": post.getId()}) }}">
                                            {{ post.getName() }}
                                        </a>
                                    </p>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="linkMore">
                            <a href="{{ path("front.news.category.activities") }}">查看更多</a>
                        </div>
                    </div>
                    <!-- /.latest News Board -->

                </div>

            </div>



            <!-- First Row -->
            <div class="row">

                <div class="col-6">

                    <h5 class="list-title">學生</h5>
                    <div>
                        <ul class="list-group list-group-date">
                            <li class="list-group-item"><p><a target="_blank" href="http://www.ntcu.edu.tw/newweb/index.htm">學校首頁</a></p></li>
                            <li class="list-group-item"><p><a target="_blank" href="http://www.lib.ntcu.edu.tw/mp.asp?mp=1">圖書館</a></p></li>
                            <li class="list-group-item"><p><a target="_blank" href="https://school.bot.com.tw/newTwbank/StudentLogin.aspx">學雜費入口</a></p></li>
                            <li class="list-group-item"><p><a target="_blank" href="http://www.ntcu.edu.tw/www/cp/">校務行政通道</a></p></li>
                            <li class="list-group-item"><p><a target="_blank" href="http://elearning.ntcu.edu.tw/">e-Learning</a></p></li>
                        </ul>
                    </div>

                </div>

                <div class="col-6">

                    <h5 class="list-title">準學生</h5>
                    <div>
                        <ul class="list-group list-group-date">
                            <li class="list-group-item"><p><a target="_blank" href="{{ path("front.enrollment.bachelor") }}">最新招生資訊</a></p></li>
                            <li class="list-group-item"><p><a target="_blank" href="{{ path("front.introduce.history") }}">關於中教資工</a></p></li>
                        </ul>
                    </div>

                </div>



            </div>
            <!-- /.First Row -->

            <!-- Sencond Row -->
            <div>

            </div>



        </div>

        <div class="col-1"></div>

    </div>



    <!-- /.Dashboard -->
    <!-- /.Index -->
{% endblock %}